<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ScenarioDef ParentName="ScenarioBase">
		<defName>GG_GoblinProgress</defName>
		<label>Goblin Progress</label>
		<description>you have been sent in cargo pods to another rimworld, now you have to survive on your own.</description>
		<scenario>
			<summary>Goblin nest starter pack - launched for expansion</summary>
			<playerFaction>
				<def>PlayerFaction</def>
				<factionDef>PlayerColony</factionDef>
			</playerFaction>
			<parts>
				<!-- Config pages -->
				
				
				
				<li Class="ScenPart_ConfigPage_ConfigureStartingPawns_Xenotypes">
					<def>ConfigurePawnsXenotypes</def>
					<pawnChoiceCount>5</pawnChoiceCount>
					<xenotypeCounts>
						<li>
							<requiredAtStart>true</requiredAtStart>
							<xenotype>GG_GoblinKind</xenotype>
							<allowedDevelopmentalStages>Child</allowedDevelopmentalStages>
							<description>starter goblin</description>
							<count>2</count>
						</li>
						<li>
							<requiredAtStart>true</requiredAtStart>
							<xenotype>GG_GoblinBrute</xenotype>
							<allowedDevelopmentalStages>Child</allowedDevelopmentalStages>
							<description>starter goblin brute</description>
							<count>1</count>
						</li>
						<li>
							<requiredAtStart>true</requiredAtStart>
							<xenotype>GG_GoblinMage</xenotype>
							<allowedDevelopmentalStages>Child</allowedDevelopmentalStages>
							<description>starter goblin mage</description>
							<count>1</count>
						</li>
						<li>
							<requiredAtStart>true</requiredAtStart>
							<xenotype>GG_GoblinSlave</xenotype>
							<allowedDevelopmentalStages>Adult</allowedDevelopmentalStages>
							<description>adult faux goblin</description>
							<count>1</count>
						</li>
					</xenotypeCounts>
					<overrideKinds>
						<li>
							<xenotype>GG_GoblinKind</xenotype>
							<pawnKind>Colonist</pawnKind>
						</li>
					</overrideKinds>
				</li>
				<!-- Player starting stuff spawn method-->
				<li Class="ScenPart_PlayerPawnsArriveMethod">
					<def>PlayerPawnsArriveMethod</def>
					<method>DropPods</method>
					<visible>false</visible>
				</li>
				<!-- Player starting things -->
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Silver</thingDef>
					<count>800</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MealSurvivalPack</thingDef>
					<count>100</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MedicineIndustrial</thingDef>
					<count>30</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>ComponentIndustrial</thingDef>
					<count>30</count>
				</li>
				<!-- Scatter some things near player start -->
				<li Class="ScenPart_ScatterThingsNearPlayerStart">
					<def>ScatterThingsNearPlayerStart</def>
					<thingDef>Steel</thingDef>
					<count>450</count>
				</li>
				<li Class="ScenPart_ScatterThingsNearPlayerStart">
					<def>ScatterThingsNearPlayerStart</def>
					<thingDef>WoodLog</thingDef>
					<count>300</count>
				</li>
				<!-- Scatter some things anywhere -->
				<li Class="ScenPart_ScatterThingsAnywhere">
					<def>ScatterThingsAnywhere</def>
					<thingDef>ShipChunk</thingDef>
					<count>3</count>
				</li>
				<li Class="ScenPart_ScatterThingsAnywhere">
					<def>ScatterThingsAnywhere</def>
					<thingDef>Steel</thingDef>
					<count>720</count>
				</li>
			</parts>
		</scenario>
	</ScenarioDef>
	<ScenarioDef ParentName="ScenarioBase">
		<defName>GG_EntSeed</defName>
		<label>Ent seed</label>
		<description>Scattered thoughtlessly - you are an invasive seed. For the true experience, start as a Child, but you do you.</description>
		<scenario>
			<summary>Ent forest beginnings</summary>
			<playerFaction>
				<def>PlayerFaction</def>
				<factionDef>PlayerColony</factionDef>
			</playerFaction>
			<parts>
				<!-- Config pages -->
				
				<li Class="ScenPart_ConfigPage_ConfigureStartingPawns_Xenotypes">
					<def>ConfigurePawnsXenotypes</def>
					<pawnChoiceCount>1</pawnChoiceCount>
					<xenotypeCounts>
						<li>
							<requiredAtStart>true</requiredAtStart>
							<xenotype>GG_Ent</xenotype>
							<allowedDevelopmentalStages>Child</allowedDevelopmentalStages>
							<description>ent seedling</description>
							<count>1</count>
						</li>
					</xenotypeCounts>
					<overrideKinds>
						<li>
							<xenotype>GG_Ent</xenotype>
							<pawnKind>Colonist</pawnKind>
						</li>
					</overrideKinds>
				</li>
				<!-- Player starting stuff spawn method-->
				<li Class="ScenPart_PlayerPawnsArriveMethod">
					<def>PlayerPawnsArriveMethod</def>
					<method>DropPods</method>
					<visible>true</visible>
				</li>
				<!-- Player starting things -->
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>SmokeleafLeaves</thingDef>
					<count>400</count>
				</li>
			</parts>
		</scenario>
	</ScenarioDef>
</Defs>